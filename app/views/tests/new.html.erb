<div class = "panel panel-success" >
  <div class = "panel-heading" >
    <h3 class = "panel-title" > Create Test </h3>
  </div>
  <div class = "panel-body" >
    <div class = "row form-horizontal" >
      <div class = "col-md-6 col-md-offset-3 form-group" style = "margin-left:30px;" >
          <%= form_for(@test) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <div id = "test_name">
              <%= f.label :name %>
              <%= f.text_field :name %>
          </div>
          <div id = "test_date" >
              <%= f.label :date %>
              <%= f.date_select :date %>
          </div>
          <div id = "test_duration" >
              <%= f.label :duration %>
              <%= f.time_select :duration %>
          </div>
          <%= f.submit "Create Test", class: "btn btn-primary" %>
          <% end %>
      </div>
    </div>
  </div>
</div>

<table class = "table">
    <tr>
        <th>Name</th>
        <th>Duration</th>
        <th>Date</th>
        <th>Questions</th>
        <th>Marks</th>
        <th>Status</th>
        <th>Privacy</th>
    </tr>
    <%@tests.each do |test|%>
      <tr>
        <td><%= link_to test.name, test_path(test) %></td>
        <td><%= test.duration.strftime('%H:%M') %></td>
        <td><%= test.date %></td>
        <td><%= test.number_of_questions %></td>
        <td><%= test.marks %></td>
        <td><%= test.active? ? "Active" : "Inactive" %></td>
        <td><%= test.private? ? "Private" : "Public" %></td>
        <%if current_user.id == test.employer_id %>
        <td style = "margin:10px;text-decoration:none;" >
            <%= link_to "Remove Test", test_path(test), method:"DELETE", data: {confirm: "Are you sure?"}, :class => "btn btn-danger" %>
        </td>
        <td style = "margin:10px;text-decoration:none;" >
            <%= link_to "See Result", result_test_path(test) %>
        </td>
        <%end%>
      </tr>
    <%end%>
</table>

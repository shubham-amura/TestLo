<div class = "page-header row" >
  <h1 class = "col-sm-11" ><%= @test.name %></h1>
  <% if @test.employer_id == current_user.id %>
  <div class = "col-sm-1" >
    <%=  link_to "Add Question", new_test_question_path(@test,params[:id]), class: 'btn btn-success pull-right' %>
  </div>

  <div class="btn btn-default pull-left">
    <%if @test.active %>
    <%= link_to "Deactivate", activate_test_path(@test) %>
    <%else%>
    <%= link_to "Activate", activate_test_path(@test) %>
    <%end%>
  </div>

  <div class = "btn btn-default pull-left" >
    <%if @test.private %>
    <%= link_to "Make Public", privacy_test_path(@test) %>
    <%else%>
    <%= link_to "Keep Private", privacy_test_path(@test) %>
    <%end%>
  </div>
  <%end%>
</div>
<div class = "row" >
  <div class = "col-sm-5 center" >
    <strong> Test Question </strong>
    <div id = "test_question_list" >
        <%=  render 'test_question', test_questions: @test_questions %>
    </div>
  </div>
  <% if @test.employer_id == current_user.id %>
  <div class = "col-sm-5 center ">
    Question Bank
    <div id = "question_bank_list" >
        <%=render 'questions/question' %>
    </div>
  </div>
  <%end%>
</div>
